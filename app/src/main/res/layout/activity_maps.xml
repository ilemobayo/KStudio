<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/main_banner_selector"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            app:cardCornerRadius="5dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:visibility="visible">
            <ImageView
                android:id="@+id/carouselView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_skyline"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center|bottom"
                android:text="LEKKI HOUSE PARTY"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:shadowColor="@color/red_dim"
                android:shadowDy="0"
                android:shadowDx="0"/>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:id="@+id/genre_selector"
            android:layout_below="@+id/main_banner_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <View
                style="@style/MP.Theme.Widget.Divider.Line.Vertical"
                android:layout_below="@+id/create_playlist"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/shake_section"
                    android:layout_marginBottom="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/shake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:text="@string/location"
                            android:layout_alignParentLeft="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:text="20, kingsz avenue, high roadster, kline saverd."
                            android:textSize="8dp"
                            android:layout_alignParentLeft="true"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/location"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="0dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_centerInParent="true"
                        android:src="@drawable/navigation"
                        />

                </RelativeLayout>
                <View
                    style="@style/MP.Theme.Widget.Divider.Line.Vertical"
                    android:layout_below="@+id/create_playlist"
                    />
                <RelativeLayout
                    android:id="@+id/flip_section"
                    android:layout_below="@+id/date_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:text="@string/date"
                            android:layout_alignParentLeft="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:text="Fri 08, 2019"
                            android:textSize="8dp"
                            android:layout_alignParentLeft="true"/>
                    </LinearLayout>
                </RelativeLayout>
                <View
                    android:id="@+id/divider"
                    style="@style/MP.Theme.Widget.Divider.Line.Vertical"
                    android:layout_below="@+id/create_playlist"
                    />
                <RelativeLayout
                    android:id="@+id/time_section"
                    android:layout_below="@+id/shake_section"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:background="@color/white">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:text="Time"
                            android:layout_alignParentLeft="true"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:layout_alignParentTop="true"
                            android:text="08:30pm - 01:30am"
                            android:textSize="8dp"
                            android:layout_alignParentLeft="true"/>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <View
                style="@style/MP.Theme.Widget.Divider.Line.Vertical"
                android:layout_below="@+id/create_playlist"
                />

            <com.santalu.ticketview.TicketView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white"
                android:elevation="0dp"
                app:tv_anchor="@+id/pnr_c"
                app:tv_holeRadius="10"
                app:tv_orientation="horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/pnr"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/pnr_c"
                        android:layout_toLeftOf="@id/pnr_c"
                        android:layout_margin="10dp"
                        android:text="Tickets are sold @ any ticket shop"
                        android:gravity="center"
                        />
                    <TextView
                        android:id="@+id/pnr_c"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_margin="10dp"
                        android:text="N5000"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </com.santalu.ticketview.TicketView>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>