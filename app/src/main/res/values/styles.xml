<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <!-- Customize your theme here. -->
        <!--toolbar-->
        <item name="colorPrimary">@color/mp.theme.dark_blue.colorPrimary</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/mp.theme.dark_blue.colorAccent</item>

        <item name="android:textColorPrimary">@color/mp.theme.dark_blue.textColorPrimary</item>
        <item name="android:textColorSecondary">@color/mp.theme.dark_blue.textColorSecondary</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/mp.theme.dark_blue.colorControlActivated</item>
        <item name="colorControlHighlight">@color/mp.theme.dark_blue.colorControlHighlight</item>

        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MP.Theme.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/MP.Theme.Widget.ActionMode.CloseButton</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/MP.Theme.Widget.AlertDialog</item>

        <!-- PopupMenu -->
        <item name="popupMenuStyle">@style/MP.Theme.Widget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/MP.Theme.TextAppearance.LargePopupMenu
        </item>
        <item name="textAppearanceSmallPopupMenu">@style/MP.Theme.TextAppearance.SmallPopupMenu
        </item>

        <!--Activity Transmission-->
        <item name="android:windowContentTransitions">true</item>
        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions">true</item>

        <!-- Translusent -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- specify enter and exit transitions -->
        <!--<item name="android:windowEnterTransition">@transition/explode</item>-->
        <!--<item name="android:windowExitTransition">@transition/explode</item>-->
    </style>

    <style name="SplashTheme" parent="Theme.Design.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowBackground">@drawable/activity_splashscreen</item>
    </style>

    <style name="AppTheme.toolbar" parent="AppTheme">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="AppTheme.Overlay.PopUp" parent="Platform.ThemeOverlay.AppCompat.Light">
        <item name="android:windowBackground">@color/background_material_light</item>
        <item name="android:colorForeground">@color/foreground_material_light</item>
        <item name="android:colorForegroundInverse">@color/foreground_material_dark</item>
        <item name="android:colorBackground">@color/background_material_light</item>
        <item name="android:colorBackgroundCacheHint">@color/abc_background_cache_hint_selector_material_light</item>
        <item name="colorBackgroundFloating">@color/background_floating_material_light</item>

        <item name="android:textColorPrimary">@color/abc_primary_text_material_light</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:textColorSecondary">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorSecondaryInverse">@color/black</item>
        <item name="android:textColorTertiary">@color/abc_secondary_text_material_light</item>
        <item name="android:textColorTertiaryInverse">@color/black</item>
        <item name="android:textColorPrimaryDisableOnly">@color/abc_primary_text_disable_only_material_light</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/black</item>
        <item name="android:textColorHint">@color/abc_hint_foreground_material_light</item>
        <item name="android:textColorHintInverse">@color/grey</item>
        <item name="android:textColorHighlight">@color/black_light</item>

        <item name="colorControlNormal">?android:attr/textColorSecondary</item>
        <item name="colorControlHighlight">@color/ripple_material_light</item>
        <item name="colorButtonNormal">@color/button_material_light</item>
        <item name="colorSwitchThumbNormal">@color/switch_thumb_material_light</item>

        <!-- Used by MediaRouter -->
        <item name="isLightTheme">false</item>
    </style>

    <style name="MP.Theme" parent="AppTheme" />

    <style name="AppBlueTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <!-- Widget -->

    <style name="MP.Theme.Widget" />

    <!-- Widget - Divider -->

    <style name="MP.Theme.Widget.Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/mp.line</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Vertical">
        <item name="android:layout_height">@dimen/mp.divider.line</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Horizontal">
        <item name="android:layout_width">@dimen/mp.divider.line</item>
    </style>


    <style name="MP.Theme.Widget.SegmentedControl">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_segmented_control_item_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/mp.padding.normal</item>
        <item name="android:paddingRight">@dimen/mp.padding.normal</item>
        <item name="android:button">@null</item>
    </style>

    <style name="MP.Theme.Widget.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/MP.Theme.TextAppearance.Light.Toolbar.Title</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/mp.theme.dark_blue.actionMode.background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/MP.Theme.TextAppearance.ActionMode.Title</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.Widget.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/mp.theme.dark_blue.background</item>
    </style>

    <style name="MP.Theme.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/mp.popupMenu.background</item>
        <item name="android:dropDownHorizontalOffset">-5dp</item>
    </style>

    <style name="MP.Theme.Widget.RecyclerView">
        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/mp.list.scrollThumb</item>
        <item name="android:scrollbarSize">@dimen/mp.list.scrollbarSize</item>
        <item name="layoutManager">@string/mp.list.layoutManager.linear</item>
    </style>

    <style name="MP.Theme.Widget.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:id">@id/progress_bar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MP.Theme.Widget.SegmentedControl.Left">
        <item name="android:background">@drawable/selector_segmented_left</item>
    </style>

x
    <style name="MP.Theme.Widget.SegmentedControl.Right">
        <item name="android:background">@drawable/selector_segmented_right</item>
    </style>


    <!-- TextAppearance -->
    <style name="MP.Theme.TextAppearance">
        <!--<item name="fontPath">@string/mp.font</item>-->
    </style>

    <style name="MyTextAppearanceTablayout" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">8dp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MP.Theme.TextAppearance.Light.Toolbar.Title" parent="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/mp.theme.dark_blue.toolBar.colorAccent</item>
    </style>

    <style name="MP.Theme.TextAppearance.Light.Toolbar.Label" parent="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="MP.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.EndSummary">
        <item name="android:id">@id/text_view_summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/mp.padding.large</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mp.text.list.title</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Hint">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/mp.text.list.hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Empty">
        <item name="android:id">@id/text_view_empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/mp.margin.xlarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MP.Theme.TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.SmallPopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="AppTheme.PopMe">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.ExternalPlayer">
        <item name="android:background">@color/translusent</item>
        <item name="android:windowBackground">@color/translusent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="AppTheme.PopActivities" parent="Theme.AppCompat.NoActionBar">
        <!--<item name="android:background">@color/transparent</item>-->
        <!--<item name="android:windowBackground">@color/transparent</item>-->
        <!--<item name="android:windowIsTranslucent">true</item>-->
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <!--<item name="android:layout_x">0.8dp</item>-->
        <!--<item name="android:layout_y">0.8dp</item>-->
    </style>

    <style name="PopActivities" parent="Theme.AppCompat.NoActionBar">
        <!-- This is the color of the Toolbar -->
        <!--<item name="colorPrimary">@color/red</item>-->
        <!-- This is the color of the Status bar -->
        <!--<item name="colorPrimaryDark">@color/white</item>-->
        <!-- The Color of the Status bar -->
        <!--<item name="statusBarColor">@color/primary_dark</item>-->
        <item name="colorAccent">@color/red</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="windowActionBar">false</item>-->
        <item name="android:windowTranslucentStatus">true</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="AppTheme.Photo">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
    </style>

    <style name="MP.Theme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MP.Theme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#f4511e</item>
        <item name="android:progressTint">#388e3c</item>
        <item name="android:colorControlActivated">#c51162</item>
    </style>





    <!-- Auth -->
    <style name="Widget"/>

    <style name="Widget.TextInputLayout">
        <item name="android:layout_height">@dimen/wrap_content</item>
        <item name="android:layout_width">@dimen/input_width</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
    </style>

    <style name="Widget.TextEdit">
        <item name="android:layout_height">@dimen/match_parent</item>
        <item name="android:layout_width">@dimen/match_parent</item>
        <item name="android:textColorHighlight">@color/color_text_highlight</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/color_input_hint</item>
        <item name="android:background">@drawable/state</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:padding">@dimen/text_padding</item>
    </style>

    <style name="Widget.Hint">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/color_text</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
