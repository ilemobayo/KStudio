<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="155dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:id="@+id/album">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_view_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp">

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:cardCornerRadius="5dp"
                app:cardUseCompatPadding="true"
                app:cardElevation="0dp"
                app:cardMaxElevation="0dp"
                app:cardPreventCornerOverlap="true">
                    <ImageView
                        android:id="@+id/ivFish"
                        android:layout_width="match_parent"
                        android:layout_height="145dp"
                        android:scaleType="centerCrop"
                        android:transitionName="simple_activity_transition" />
                    <TextView
                        android:id="@+id/text_view"
                        style="@style/MP.Theme.TextAppearance.List.Hint"
                        android:layout_marginTop="@dimen/mp.margin.small"
                        tools:text="Album"
                        android:text="Album"
                        android:textSize="10sp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:layout_gravity="top|center_horizontal|right"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:shadowColor="@color/black"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="1"/>
            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_toStartOf="@+id/item_options_action"
                    android:layout_toEndOf="@id/item_options_action"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/cardname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/ivFish"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:paddingTop="1dp"
                        android:paddingBottom="0dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Album title"
                        android:textColor="@color/black"
                        android:textSize="10dp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:shadowColor="@color/white"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="0"/>
                    <TextView
                        android:id="@+id/cardart"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardname"
                        android:gravity="left"
                        android:layout_gravity="center"
                        android:paddingTop="0dp"
                        android:paddingBottom="1dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="Artist Name"
                        android:textColor="@color/black"
                        android:textSize="8dp"
                        android:textStyle="normal"
                        android:singleLine="true"
                        android:shadowColor="@color/white"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="0"/>
                </LinearLayout>
                <FrameLayout
                    android:id="@+id/item_options_action"
                    android:layout_width="15dp"
                    android:layout_height="35dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="bottom|right"
                    >
                        <android.support.v7.widget.AppCompatImageView
                            android:id="@+id/item_button_action"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="center"
                            app:srcCompat="@drawable/ic_list_item_action"
                            />
                </FrameLayout>
            </RelativeLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>