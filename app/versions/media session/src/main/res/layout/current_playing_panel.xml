<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:gravity="center_horizontal"
    android:background="@color/red_dim"
    android:elevation="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/button_play_toggle"
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_play"
                />

            <LinearLayout
                android:id="@+id/bottom_sheet_open_music"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/item_options_action"
                android:layout_toStartOf="@+id/item_options_action"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginRight="@dimen/mp.margin.normal"
                android:layout_marginEnd="@dimen/mp.margin.normal"
                >

                <TextView
                    style="@style/MP.Theme.TextAppearance.List.Title"
                    android:id="@+id/text_view_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="MusicBox Player"
                    tools:text="A little bit longer"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:shadowColor="@color/black"
                    android:textStyle="bold"
                    android:shadowDy="0"
                    android:shadowDx="0"
                    android:shadowRadius="2"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true">

                    <TextView
                        style="@style/MP.Theme.TextAppearance.List.Hint"
                        android:id="@+id/text_view_artist"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Naijaloaded"
                        tools:text="A little bit longer"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="@color/white"
                        android:shadowColor="@android:color/darker_gray"
                        android:shadowDy="0"
                        android:shadowDx="0"
                        android:shadowRadius="5"
                        />

                </RelativeLayout>
            </LinearLayout>

            <FrameLayout
                android:id="@+id/item_options_action"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                >

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/button_play_next"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:scaleType="center"
                    app:srcCompat="@drawable/ic_play_next"
                    />
            </FrameLayout>

    </RelativeLayout>
</LinearLayout>